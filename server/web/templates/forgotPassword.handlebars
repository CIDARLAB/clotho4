<section class="hero is-light is-fullheight is-bold">
    <div class="hero-heading">
        {{> nav}}
        {{> alert}}
        <div class="has-text-centered">
            <h1 class="title">Forgot Password</h1>
        </div>
    </div>
    <div class="hero-body">
        <div class="container">
            <div class="columns">
                <div class="column is-8 is-offset-2">
                    <form id="reset" class="box">
                        <label class="label">Email</label>
                        <input class="input" id="email" type="email" placeholder="Email">
                        <input class="button is-primary is-outlined" type="submit" value="Reset Password">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript" src="../public/mini-js/forgotPassword.min.js"></script>
